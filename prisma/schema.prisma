// PorCentagem - Authentication API Schema
// Porque cada centavo conta, até na segurança!

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Sessão
model Session {
  id            String    @id @default(uuid()) @db.Uuid
  user_id       String    @db.Uuid
  refresh_token String    @unique
  expires_at    DateTime
  created_at    DateTime  @default(now())
  last_used_at  DateTime  @default(now())
  is_blocked    Boolean   @default(false)
  device_info   String?   // Informações do dispositivo/navegador
  ip_address    String?   // IP do cliente

  @@map("sessions")
  @@index([user_id])
}

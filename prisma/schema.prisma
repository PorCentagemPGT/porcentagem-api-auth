// PorCentagem - Authentication API Schema
// Porque cada centavo conta, até na segurança!

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuário
model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String    @unique
  password_hash String
  name          String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  sessions      Session[]

  @@map("users")
}

// Modelo de Sessão
model Session {
  id            String   @id @default(uuid()) @db.Uuid
  user_id       String   @db.Uuid
  refresh_token String   @unique
  expires_at    DateTime
  created_at    DateTime @default(now())
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Modelo de Token de Recuperação de Senha
model PasswordReset {
  id         String   @id @default(uuid()) @db.Uuid
  email      String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())

  @@map("password_resets")
}
